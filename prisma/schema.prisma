//Data source
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//Generator
generator client {
  provider = "prisma-client-js"
}

//Data models
model User {
  id  Int @id @default(autoinrement())
  fullname  String?
  email String  @unique
  posts [Post]
}

model Post {
  id  Int @id  @default(autoinrement())
  title String?
  body  String?
  author  User? @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Comment {
  id  Int @id @default(autoinrement())
  body  String?
  author  User? @relation(fields: [authorId], references: [id])
  authorId User?
  post  Post? @relation(fields: [postId], references: [id])
  postId Int?
}

model Like {
  id Int @id @default(autoinrement())
  liked Boolean @default(false)
  author User? @relation(fields: [authorId], references: [id])
  authorId Int?
  post Post? @relation(fields: [postId], references: [id])
  postId Int?
}